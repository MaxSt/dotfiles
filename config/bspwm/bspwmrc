#! /bin/sh
bspc monitor -d 1 2 3 4 5 6

. ~/.config/bspwm/colors

for desktop in $(bspc query -D); do
  bspc config -d $desktop border_width 2;
done

bspc config border_width        3
bspc config window_gap          10
bspc config split_ratio         0.50
bspc config borderless_monocle  false
bspc config gapless_monocle     false
bspc config top_padding 14px
bspc config bottom_padding 0px
bspc config normal_border_color "#$BSPWM_BORDERCOLOR_UNFOCUSED"
bspc config focused_border_color "#$BSPWM_BORDERCOLOR_FOCUSED"
bspc config presel_border_color "#$COLOR_LIGHTRED"
bspc config focus_follows_pointer true


bspc rule -a mplayer2 floating=on

# start barpannel
~/.config/bspwm/panel &

