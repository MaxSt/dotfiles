#!/bin/bash
COLOR_LIGHTGREEN="2ECC71"

COLOR_LIGHTRED="FF0033"
COLOR_DARKRED="C0392B"

COLOR_LIGHTGREEN="2ECC71"
COLOR_DARKGREEN="27AE60"

COLOR_LIGHTYELLOW="F1C40F"
COLOR_DARKYELLOW="F39C12"

COLOR_LIGHTBLUE="3498DB"
COLOR_DARKBLUE="2980B9"

COLOR_LIGHTVIOLET="9B59B6"
COLOR_DARKVIOLET="8E44AD"

COLOR_LIGHTCYAN="1ABC9C"
COLOR_DARKCYAN="16A085"

COLOR_DARK="252525"
