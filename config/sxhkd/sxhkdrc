#
# wm independent hotkeys
#
#
ctrl + Return
	urxvt

super + Return
	urxvt

mod1 + Return
	urxvt

super + {j,k}
	~/Documents/contrib/focus.sh {next, prev}

super + {h,l}
	wrs {-10, 10} 0 $(pfw)

mod1 + h
	wrs -10 0 $(pfw)

super + r
	urxvt -e ranger

super + t
	urxvt -e tmux

super + b
	firefox

super + n
	nautilus


# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

# Turn screen off
super + x
  xset dpms force standby
