#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + w
	bspc window -c

# Change layout
super + less
	bspc desktop -l next

# Balance (Adjust the split ratios of the tree of the selected desktop so that all windows occupy the same area)
super + greater
	bspc desktop -B

super + {s,f}
	bspc window -t {floating,fullscreen}

# Focus last {window,desktop}
# super + {grave,Tab}
#	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

alt + {_,shift + }tab
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}e
	bspc pointer -u

#
# wm independent hotkeys
#

XF86AudioMute
  amixer set Master toggle

super + BackSpace
  amixer set Master toggle

XF86AudioRaiseVolume
  amixer set Master 5%+ unmute

super + equal
  amixer set Master 5%+ unmute

XF86AudioLowerVolume
  amixer set Master 5%- unmute

super + minus
  amixer set Master 5%- unmute

super + Return
	urxvt

super + r
	urxvt -e ranger

super + t
	urxvt -e tmux

super + b
	firefox

super + b
	nautilus

#j4-dmenu-desktop --dmenu='dmenu -i -fn -lucy-tewi-medium-r-normal--11-90-75-75-p-58-iso10646-1 -nb "#FFFFFF" -l 5 -p "-->"'
#dmenu_run -i -fn -lucy-tewi-medium-r-normal--11-90-75-75-p-58-iso10646-1 -nb "#FFFFFF" -l 5 -p "-->"
super + space
  interrobang

# make sxhkd reload its configuration files:
super + Escape
pkill -USR1 -x sxhkd
