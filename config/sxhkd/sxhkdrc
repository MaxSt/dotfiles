#
# wm independent hotkeys
#
#
super + Return
	urxvt


super + w
  killw $(pfw)

super + {h,j,k,l}
	~/.scripts/wm/closest.sh {h,j,k,l}

super + n
	~/.scripts/wm/focus.sh next

super + space
	~/.scripts/wm/fullscreen.sh $(pfw)

super + r
	~/.scripts/wm/rainbow.sh $(pfw)

super + c
	~/.scripts/wm/closest.sh


super + shift + {h,l}
	wrs {-10, 10} 0 $(pfw)

mod1 + h
	wrs -10 0 $(pfw)

super + r
	urxvt -e ranger

super + t
	urxvt -e tmux

super + b
	firefox

super + n
	nautilus


# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

# Turn screen off
super + x
  xset dpms force standby
