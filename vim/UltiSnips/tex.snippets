snippet sec "section" b
\section{${1:Name}}${0}
endsnippet

snippet ssec "subsection" b
\subsection{${1:Name}}${0}
endsnippet

snippet sssec "subsubsection" b
\subsubsection{${1:Name}}${0}
endsnippet

snippet img "image" b
\begin{figure}[htbp!]
  \begin{centering}
    \includegraphics[scale=${5:0.5}]{${1:Pfad}}
    \par
  \end{centering}
  \caption[${2:Kurzer Titel der Grafik}]{${3:Das ist der lange Titel der Grafik, der genau erkl√§rt, worum es sich handelt.}\label{fig:${4:figure}}}
\end{figure}
endsnippet

snippet label "label section" i
\label{sec:${1:label}}${0}
endsnippet

snippet label "label figure" i
\label{fig:${1:label}}${0}
endsnippet

snippet ref "Reference figure" i
\ref{fig:${1:fig}}${0}
endsnippet

snippet ref "Reference section" i
\ref{sec:${1:sec}}${0}
endsnippet

snippet sc "Literatur Source" i
\citep{${1:source}}${0}
endsnippet

snippet list "list" !b
\begin{itemize}
  \item ${0}
\end{itemize}
endsnippet

snippet list "list with header" !b
\begin{itemize}
  \item \textbf{${1:header}}\hspace{0.3cm}
    ${2:text}
  ${0}
\end{itemize}
endsnippet

snippet it "item" !b
\item ${0}
endsnippet

snippet it "item with header" !b
\item \textbf{${1:header}}\hspace{0.3cm}
  ${2:text}
${0}
endsnippet

snippet codeb "Code block" !b
\begin{lstlisting}[language=${1:Ruby}]
  ${0}
\end{lstlisting}
endsnippet

snippet code "Code File" !b
\lstinputlisting[language=${1:Ruby}]{${2:Pfad}}
endsnippet

snippet q "Quote" i
\glqq ${1:Quote}\grqq${2:\ }${0}
endsnippet

